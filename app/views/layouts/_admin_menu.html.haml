    = content_tag(:li, link_to(icon("flag", "Upload"), assets_url))
    = content_tag(:li, link_to(icon("flag", "About"), about_url))
    = content_tag(:li, link_to(icon("flag", "Contact"), contact_url))
    = content_tag(:li, link_to(icon("user", "My Profile"), edit_user_url(1)))
